{
  "expo": {
    "jsEngine": "jsc",
    "name": "CashPilot",
    "slug": "CashPilot",
    "version": "1.0.0",
    "orientation": "portrait",
    "splash": {
      "image": "./assets/img/loading-screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#191414"
    },
    "ios": {
      "supportsTablet": true,
      "jsEngine": "hermes"  // Abilita Hermes per iOS
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/img/logo.png",
        "backgroundColor": "#ffffff"
      },
      "jsEngine": "hermes"  // Abilita Hermes per Android
    },
    "web": {
      "favicon": "./assets/img/logo.png"
    },
    "plugins": ["expo-font"],
    "scheme": "cashpilot" 
  }
}

